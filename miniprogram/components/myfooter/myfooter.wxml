	<view class="line"></view>
</view>

<!-- 发布活动弹出框 -->
<van-dialog
  use-slot
  title="发布活动"
  show="{{ showPublishActivatyWindow }}"
	messageAlign="left"
	closeOnClickOverlay
	showConfirmButton
	showCancelButton
  confirm-button-open-type="getUserInfo"
  bind:close="onClose"
  bind:getuserinfo="getUserInfo"
	confirmButtonText="确认发布"
	customStyle="myvan-dialog"
>
	<view class="cell-group">
		<van-cell-group class="van-cell-group">
			<van-field
				value="{{ activity_title }}"
				required
				clearable
				focus
				label="活动标题"
				icon="question-o"
				placeholder="请输入活动标题"
				bind:click-icon="onClickIcon"
			/>
			<van-field
				value="{{ max_people_num }}"
				label="参与人数"
				placeholder="请输入参与人数限制"
				required
			/>
			<van-field
				required
        name="datetimePicker"
        label="报名开始时间"
        placeholder="请选择报名开始时间"
        bind:tap="choseTime"
        input-align="left"
        right-icon="arrow"
        value="{{registrationTime}}"
				data-idx="0"
      />
			<van-field
				required
        name="datetimePicker"
        label="报名截止时间"
        placeholder="请选择报名截止时间"
        bind:tap="choseTime"
        input-align="left"
        right-icon="arrow"
        value="{{unregistrationTime}}"
				data-idx="1"
      />
			<van-field
				required
        name="datetimePicker"
        label="活动开始时间"
        placeholder="请选择活动开始时间"
        bind:tap="choseTime"
        input-align="left"
        right-icon="arrow"
        value="{{beginTime}}"
				data-idx="2"
      />
			<van-field
				required
        name="datetimePicker"
        label="活动截止时间"
        placeholder="请选择活动截止时间"
        bind:tap="choseTime"
        input-align="left"
        right-icon="arrow"
        value="{{endTime}}"
				data-idx="3"
      />
			<van-popup show="{{showPicker}}" position="bottom">
				<van-datetime-picker
					bind:cancel="onCancel"
					bind:confirm="onConfirm"
					type="datetime"
					min-date="{{minDate}}"
					max-date="{{maxDate}}"
				/>
			</van-popup>
			<van-field
				value="{{ max_people_num }}"
				label="活动举办地点"
				placeholder="如：北京-东城区"
				required
				bindtap="onClickAddr"
			/>
			<view class="wrap">
				<view class="img-wrap">
					<!-- <view class="txt">上传活动封面</view> -->
					<van-field
						value=""
						label="活动介绍图片"
						disabled
					/>
					<view class="imglist">
						<view class="item" wx:for="{{imgs}}" wx:key="item">
							<image src="{{item}}" alt=""></image>
							<view class='delete' bindtap='deleteImg' data-index="{{index}}">
								<image src="../../static/images/icons/delete.png"></image>
							</view>
						</view>
						<view class="last-item" wx:if="{{imgs.length >= 3 ? false : true}}" bindtap="bindUpload">
							<text class="sign">+</text>
						</view>
					</view>
				</view>
			</view>
		</van-cell-group>
	</view>
</van-dialog>

