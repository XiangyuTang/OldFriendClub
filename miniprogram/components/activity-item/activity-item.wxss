.acitem {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border: 1px solid #eee;
}

.acitem .pic {
  width: 200rpx;
  height: 140rpx;
  margin-right: 10rpx;
}

.acitem .pic .img {
  width: 100%;
  height: 100%;
}

.acitem .text {
  width: 470rpx;
  height: 160rpx;
  text-align: justify;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.acitem .text .title {
  line-height: 1.4em;
  color: var(--globalColor);
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.acitem .text .info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: var(--focusColor);
  padding-bottom: 6rpx;
}

.acitem .text .info .block {
  display: flex;
  align-items: center;
}

.acitem .text .info .block van-icon {
  color: var(--themeColor);
  padding-left: 2rpx;
  margin-right: 8rpx;
  margin-top: 10rpx;
  align-items: center;
  font-size: 35rpx;
}

.item-intro {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: var(--focusColor);
  padding-bottom: 6rpx;
}

.item-intro .item-tag {
  display: flex;
  align-items: center;
}

.item-intro .item-tag van-tag {
  padding-right: 4rpx;
  padding-bottom: 10rpx;
}
