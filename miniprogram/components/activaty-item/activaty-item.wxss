.acitem {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

.acitem .pic {
  width: 200rpx;
  height: 150rpx;
  margin-right: 10rpx;
}

.acitem .pic .img {
  width: 100%;
  height: 100%;
}

.acitem .text {
  width: 440rpx;
  height: 150rpx;
  text-align: justify;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.acitem .text .title {
  line-height: 1.4em;
  color: var(--globalColor);
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.acitem .text .info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: var(--focusColor);
}

.acitem .text .info .block {
  display: flex;
  align-items: center;
}

.acitem .text .info .block van-icon {
  color: var(--themeColor);
  margin-right: 8rpx;
  margin-top: 10rpx;
  align-items: center;
  font-size: 35rpx;
}
