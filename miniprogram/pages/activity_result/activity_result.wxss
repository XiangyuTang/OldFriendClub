/* pages/activity_result/activity_result.wxss */
page {
  background-color: #f5f5f5;
  position: relative;
  width: 100%;
  height: 100%;
}

textarea {
  word-wrap: break-word;
  white-space: pre-line;
 }

 .img_swiper {
  padding-top: 30rpx;
}

.img_swiper swiper {
  height: 460rpx;
}

.img_swiper swiper swiper-item image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}


 .input-text {
  word-wrap: break-word;
  white-space: pre-wrap;
}

.activity_title {
  font-size: 20px;
  text-align: center;
}

.info_model {
  width: 100%;
  background-color: #FFFFFF;
}

.info_model .item {
  display: flex;
  padding: 0 20rpx;
  min-height: 100rpx;
  font-size: 28rpx;
  color: #343434;
}

.info_model .arrow_model:active {
  background-color: #F5F5F5;
}

.info_model .item + .item {
  border-top: 1px solid #e8e8e8;
}

.info_model .item .icon {
  margin: 25rpx 0 auto;
}

.info_model .item .content {
  margin: 25rpx 20rpx;
  line-height: 50rpx;
}

.info_model .item .arrow {
  margin: auto 0 auto auto;
}

.info_model .item .sign_btn, .sign_btn2 {
  width: 100%;
  margin: 25rpx auto;
  line-height: 80rpx;
  height: 80rpx;
  padding: 0;
  background: #ed7a19;
  color: #ffffff;
  box-shadow: none;
}

.info_model .item .sign_btn[disabled] {
  background-color: #ed7a19;
  color: #ffffff;
  opacity: 0.8;
}

.info_model .item .sign_btn2:active {
  background-color: #ffffff;
  color: #4faf70;
  opacity: 0.8;
}

.info_model .item .sign_btn[disabled], .sign_btn[disabled]:active {
  color: rgba(122, 118, 118, 0.8);
  background-color: #ffffff;
  opacity: 1;
}

.info_model .item .sign_btn[disabled] {
  background-color: #ed7a19;
  color: #ffffff;
  opacity: 0.8;
}

.info_model .item .sign_btn2:active {
  background-color: #ffffff;
  color: #4faf70;
  opacity: 0.8;
}

.info_model .item .sign_btn[disabled], .sign_btn[disabled]:active {
  color: rgba(122, 118, 118, 0.8);
  background-color: #ffffff;
  opacity: 1;
}

.input-text{
  width: 100%;
}

.edit-button {
  width: 40%;
  margin: 25rpx auto;
  margin-left: 40rpx;
  float: left;
}

.delete-button {
  width: 40%;
  margin: 25rpx auto;
  margin-right: 40rpx;
  float: right;
}

.publish-button {
  width: 80%;
  margin: 25rpx auto;
}

.content_model {
  color: #343434;
  width: calc(100% - 60rpx);
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 30rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  padding-bottom: var(--safeBottom);
}

.content_model view {
  width: 100%;
}

.content_model image {
  width: 100%;
  /* height: auto; */
}

.content_model view + view, .content_model image + view, .content_model view + image {
  margin-top: 50rpx;
}

.content_model image + image {
  margin-top: -16rpx;
}

.audit-tag {
  float: right;
  font-size: 28rpx;
  margin-top: -50rpx;
}