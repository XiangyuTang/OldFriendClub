.banner {
  padding-top: 30rpx;
}

.banner swiper {
  height: 460rpx;
}

.banner swiper swiper-item image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}

.scrollNav {
  padding: 30rpx 30rpx;
}

.scrollNav scroll-view {
  white-space: nowrap;
}

.scrollNav scroll-view .item {
  display: inline-block;
  padding: 0 25rpx;
  text-align: center;
}

.scrollNav scroll-view .item .pic {
  width: 100rpx;
  height: 100rpx;
  margin-left: 16rpx;
}

.scrollNav scroll-view .item .pic image {
  width: 100%;
  height: 100%;
}

.scrollNav scroll-view .item .text {
  font-size: 32rpx;
  color: var(--globalColor);
  padding-top: 10rpx;
}

.scrollNav scroll-view .item:first-child {
  padding-left: 0;
}

.scrollNav scroll-view .item:last-child {
  padding-right: 0;
}

.van-tab__title {
  font-size: 35rpx;
}

.van-tab--active .van-tab__title {
  font-weight: 500;
  color: #f09637;
}

.loadout {
  text-align: center;
  padding: 30rpx 0;
}

.loadout .nodata {
  font-size: 30rpx;
  color: #666;
}
