.banner {
  padding-top: 30rpx;
}

.banner swiper {
  height: 460rpx;
}

.banner swiper swiper-item image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}

.scrollNav {
  padding: 30rpx 30rpx;
}

.scrollNav scroll-view {
  white-space: nowrap;
}

.scrollNav scroll-view .item {
  display: inline-block;
  padding: 0 25rpx;
  text-align: center;
}

.scrollNav scroll-view .item .pic {
  width: 100rpx;
  height: 100rpx;
  margin-left: 16rpx;
}

.scrollNav scroll-view .item .pic image {
  width: 100%;
  height: 100%;
}

.scrollNav scroll-view .item .text {
  font-size: 32rpx;
  color: var(--globalColor);
  padding-top: 10rpx;
}

.scrollNav scroll-view .item:first-child {
  padding-left: 0;
}

.scrollNav scroll-view .item:last-child {
  padding-right: 0;
}

.van-tab__title {
  font-size: 35rpx;
}

.van-tab--active .van-tab__title {
  font-weight: 500;
  color: #f09637;
}

.loadout {
  text-align: center;
  padding: 30rpx 0;
}

.loadout .nodata {
  font-size: 30rpx;
  color: #666;
}


.publishActivity {
  width: 100rpx;
  height: 100rpx;
  background-color: var(--themeColor);
  position: fixed;
  bottom: 100rpx;
  right: 60rpx;
  border-radius: 50%;
  box-shadow: 0 0 50rpx #e18a39;
  z-index: 10;
}

.publishActivity .btn {
  position: relative;
  z-index: 2;
  border-radius: 50%;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.publishActivity .pic {
  width: 80%;
  height: 80%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  position: absolute;
  z-index: 1;
}

.publishActivity .line {
  width: 100%;
  height: 100%;
  border: 3px solid #e18a39;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 50%;
  animation: emit 1.5s infinite;
}